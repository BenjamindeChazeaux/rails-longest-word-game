<div class="container">
  <h1>New game</h1>

  <div class="letters-grid">
    <div class="letters">
      <% @letters.each do |letter| %>
        <div class="letter"><%= letter %></div>
      <% end %>
    </div>
  </div>

  <h3>What is the longest word you can find?</h3>

  <%= form_with url: score_game_path, method: :post, data: { turbo: false }, class: "word-form" do |form| %>
    <%= hidden_field_tag :letters, @letters.join(',') %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    
    <div class="form-group">
      <%= form.text_field :word, class: "form-control" %>
      <%= form.submit "Play", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
